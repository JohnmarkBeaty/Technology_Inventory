<div class="row">
<div class="col-md-6">
<p>
  <strong>Name:</strong>
  <%= @printer.name %>
</p>

<p>
  <strong>Namufacturer:</strong>
  <%= @printer.namufacturer %>
</p>

<p>
  <strong>Model:</strong>
  <%= @printer.model %>
</p>

<p>
  <strong>MAC:</strong>
  <%= @printer.MAC %>
</p>

<p>
  <strong>Location:</strong>
  <%= @printer.location %>
</p>

<p>
  <strong>Print queue:</strong>
  <%= @printer.print_queue %>
</p>
</div>
<div class="col-md-6">
  <% if @printer.addresses.count > 0 %>
    <h4>Current IP Addresses:</h4>
    <table class="table">
      <tbody>
        <% @printer.addresses.each do |a| %>
          <tr>
            <td><%= a.address %></td>
            <td><%= a.network.name %></td>
            <td><%= link_to 'Destroy', a, method: :delete, class:"label label-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <h4>Add IP Address:</h4>
  <%= form_for(@new_ip) do |f| %>
    <div class="form-group">
      <%= f.label :network_id, "Network" %>
      <%= f.collection_select :network_id, Network.all, :id, :name, {:include_blank => "Please Select"}, {:class => "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :address %><br>
      <%= f.text_field :address, class:"form-control" %>
    </div>
    <%= hidden_field_tag :device_id, @printer.id %>
    <%= hidden_field_tag :device_type, @printer.class.name %>
    <div class="actions">
      <%= f.submit "Add IP Address",  class:"btn btn-primary" %>
    </div>
  <% end %>
  
</div>
</div>

<%= link_to 'Edit', edit_printer_path(@printer) %> |
<%= link_to 'Back', printers_path %>
