<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">add ip address</h4>
      </div>
      <%= form_for @address, remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :network_id %>
              <%= f.collection_select :network_id, Network.all, :id, :name, {:include_blank => "Please Select"}, {:class => "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, class:"form-control" %>
            </div>
            <%= hidden_field_tag :device_id, @device.id %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit 'add address', class: "btn btn-primary" %>
        <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
    </div>
</div>