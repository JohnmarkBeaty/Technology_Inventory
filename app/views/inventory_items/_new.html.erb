<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="myModalLabel">new inventory item</h4>
		</div>
		<%= form_for @inventory_item, remote: true do |f| %>
			<div class="modal-body">
				<ul class="errors"></ul>
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<%= f.label :sku, 'SKU' %>
							<%= f.text_field :sku, class:'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label :name %>
							<%= f.text_field :name, class:'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label :description %>
							<%= f.text_area :description, class:'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label :cost %>
							<%= f.text_field :cost, class:'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label :inventory_category_id, 'Category' %>
							<%= f.number_field :inventory_category_id, class:'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label :serial_number_required, 'Serial Number Required?' %>&nbsp;&nbsp;
							<%= f.check_box :serial_required %>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= f.submit 'create inventory item', class: "btn btn-primary" %>
				<%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
			</div>
		<% end %>
	</div>
</div>