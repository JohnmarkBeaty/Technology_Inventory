<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="myModalLabel">serial numbers</h4>
		</div>
		<%= form_for @inventory_item do |f| %>
			<div class="modal-body">
				<ul class="errors"></ul>
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<%= f.label :serial_numbers, 'Serial Numbers' %>
							<%= f.text_area :raw_serial_number_list, :rows => "15", class:'form-control' %>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= f.submit 'update inventory item', class: "btn btn-primary" %>
				<%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
			</div>
		<% end %>
	</div>
</div>