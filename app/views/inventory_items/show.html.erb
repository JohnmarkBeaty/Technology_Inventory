<div class="row">
  <div class="col-md-10">
    <h2><%= @inventory_item.name %></h2>
  </div>
  <div class="col-md-2">
    <div class="pull-right">
      <%= link_to 'edit', edit_inventory_item_path(@inventory_item), class:'btn btn-default' %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <ul class="list-group">
        <li class="list-group-item">
          <h4>
            <strong>SKU:</strong>
            <div class="pull-right">
              <%= @inventory_item.sku %>
            </div>
          </h4>
        </li>
        <li class="list-group-item">
          <h4>
            <strong>Category:</strong>
            <div class="pull-right">
              <% if @inventory_item.inventory_category %>
                <%= @inventory_item.inventory_category.name %>
              <% end %>
            </div>
            </h4>
        </li>
        <li class="list-group-item">
          <h4>
            <strong>Cost:</strong>
            <div class="pull-right">
              <%= number_to_currency(@inventory_item.cost, :precision => 2) %>
            </div>
          </h4>
        </li>
        <li class="list-group-item">
          <h4>
            <strong>Description:</strong>
            <br><br>
            <%= @inventory_item.description %>
          </h4>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Quantities</h4>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>On Hand</th>
            <th>Loaned Out</th>
            <th>In Use</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @inventory_item.on_hand_quantity %></td>
            <td><%= @inventory_item.loaned_out_quantity %></td>
            <td><%= @inventory_item.in_use_quantity %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Serial Numbers</h4>
      </div>
      <ul class="list-group">
        <li class="list-group-item">20948288923789</li>
        <li class="list-group-item">20948288923789</li>
        <li class="list-group-item">20948288923789</li>
        <li class="list-group-item">20948288923789</li>
        <li class="list-group-item">20948288923789</li>
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to inventory_items_path, class:"btn btn-default" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> &nbsp;back
    <% end %>
  </div>
</div>
