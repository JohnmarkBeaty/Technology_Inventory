<div class="row">
  <div class="col-xs-10">
    <h1>Networks</h1>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Create Network", new_network_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<hr class="hr-divide">

<div class="row">
  <% @networks.each do |network| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="pull-right">
            <%= link_to 'View', network, class:'btn btn-default' %>
          </div>
          <h4><%= network.name %></h4>
          <hr class="hr-divide">
          <strong>Network: </strong><%= network.network %><br>
          <strong>vLAN: </strong><%= network.vlan %><br>
          <strong>Static Devices: </strong><%= network.devices.count %><br>
          <strong>Description: </strong><%= network.description %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<hr class="hr-divide">
