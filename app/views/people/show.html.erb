<div class="row">
  <div class="col-md-10">
    <h2><%= @person.first_name %> <%=@person.last_name %> <small>Person</small></h2>
  </div>
  <div class="col-md-2">
    <div class="pull-right">
      <br>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-cog"></span>&nbsp;<span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
              <li><%= link_to "Create New Person", new_person_path %></li>
              <li><%= link_to "Edit Person", edit_person_path(@person) %></li>
              <li><%= link_to "Delete Person", person_path(@person), method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
    </div>
  </div>
</div>

<hr class="hr-divide">

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Extension
        </h3>
      </div>
      <div class="panel-body">
        <%= @person.extension %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Direct Dial Number
        </h3>
      </div>
      <div class="panel-body">
        <%= @person.direct_dial %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Cell Phone Number
        </h3>
      </div>
      <div class="panel-body">
        <%= @person.cell %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Email
        </h3>
      </div>
      <div class="panel-body">
        <%= @person.email %>
      </div>
    </div>
  </div>
</div>

<hr class="hr-divide">

<h3>Associated Devices</h3>

