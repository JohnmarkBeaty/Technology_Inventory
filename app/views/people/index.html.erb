<div class="row">
  <div class="col-xs-10">
    <h1>People</h1>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Create Person", new_person_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divide">

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Extension</th>
              <th>Email</th>
              <th width="200"></th>
            </tr>
          </thead>

          <tbody>
            <% @people.each do |person| %>
              <tr>
                <td><%= person.first_name %></td>
                <td><%= person.last_name %></td>
                <td><%= person.extension %></td>
                <td><%= person.email %></td>
                <td>
                  <%= link_to 'View', person, class:"label label-default" %> &nbsp;
                  <%= link_to 'Edit', edit_person_path(person), class:"label label-default" %> &nbsp;
                  <%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' }, class:"label label-default" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<hr class="hr-divide">
