<div class="row">
  <div class="col-xs-10">
    <h1>People</h1>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Create Person", new_person_path, remote: true %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divide">
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Extension</th>
              <th>Email</th>
              <th width="200"></th>
            </tr>
          </thead>
          <tbody id="people-index">
            <%= render 'index' %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divide">
<div class="modal fade" id="people-modal" tabindex="-1" role="dialog" aria-labelledby="people-modal" aria-hidden="true">
</div>
