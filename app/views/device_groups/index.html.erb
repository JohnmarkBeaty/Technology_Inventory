<div class="row">
  <div class="col-xs-10">
    <h1>Device Groups</h1>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Create Device Group", new_device_group_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divide">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <% @device_groups.each do |device_group| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-8">
                  <h2 class="panel-title">
                    <a href="<%= device_group_path(device_group) %>"><%= device_group.name %></a>
                  </h2>
                </div>
                <div class="col-xs-4">
                  <a href="<%= edit_device_group_path(device_group) %>" class="btn btn-default btn-block btn-sm" role="button">Edit</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<hr class="hr-divide">
