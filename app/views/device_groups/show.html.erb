<div class="row">
	<div class="col-md-6">
		<h4>Attributes</h4>
		<br>
		<table class="table">
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% if @device_group.attrs.count > 0 %>
					<% @device_group.attrs.each do |a| %>
						<tr>
							<td><%= a.name %></td>
							<td><%= link_to 'Edit', edit_attr_path(a), class:"label label-success" %></td>
							<td><%= link_to 'Destroy', a, method: :delete, class:"label label-danger" %></td>
						</tr>
					<% end %>
				<% else %>
					<tr>
						<td colspan="3">No attributes found.</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<br>
		<h4>Create Attributes</h4>
		<%= form_for(@attr_new) do |f| %>
			<div class="form-group">
				<%= f.label :name %><br>
				<%= f.text_field :name, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :style %><br>
				<%= f.select(:style, Attr.valid_styles { |value| [ value, value ] }, { :include_blank=>true }, { :class => 'form-control' }) %>
			</div>
			<div class="form-group">
				<%= f.label :unit %><br>
				<%= f.text_field :unit, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :values %><br>
				<%= f.text_area :values, class:"form-control" %>
			</div>
			<%= hidden_field_tag :device_group_id, @device_group.id %><br>
			<div class="actions">
				<%= f.submit "Add Attribute",  class:"btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div class="col-md-6">
		<h4>Devices in group</h4>
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Notes</th>
					<th>IP Address(es)</th>
				</tr>
			</thead>
			<tbody>
				<% if @device_group.devices.count > 0 %>
					<% @device_group.devices.each do |d| %>
						<tr>
							<td><%= d.name %></td>
							<td><%= d.notes %></td>
							<td><% d.addresses.each do |addr| %><%= addr.address %> <% end %></td>
						</tr>
					<% end %>
				<% else %>
					<tr>
						<td colspan="3">No devices found in group</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= link_to 'Edit', edit_device_group_path(@device_group) %> |
<%= link_to 'Back', device_groups_path %>
