$("ul.errors").html("")
<% if @upload.errors.any? %>
  <% @upload.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#article-files").html("<%= escape_javascript(render 'articles/file_list') %>")
  $("#file-modal").modal("hide")
<% end %>