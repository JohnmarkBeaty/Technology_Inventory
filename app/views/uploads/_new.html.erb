<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">attach file</h4>
    </div>
    <%= form_for @upload, :html => { :multipart => true }, :remote => true do |f|  %>
    <div class="modal-body">
      
      	<div class="form-group">
      		<%= f.label :name %>
      		<%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :file, "File" %>
          <%= f.file_field :file, class:"form-control" %>
          <%= f.hidden_field :file_cache %>
        </div>
        <%= f.hidden_field :uploadable_id, :value => @item.id %>
        <%= f.hidden_field :uploadable_type, :value => @item.class.name %> 
    </div>
    <div class="modal-footer">
        <%= f.submit 'attach file', class: "btn btn-primary" %>
        <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      <% end %>
    </div>
  </div>
</div>