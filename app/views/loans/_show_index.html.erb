<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <ul class="list-group">
        <li class="list-group-item">
          <h4>Name:</h4>
          <p><%= @loan.loanee %></p>
        </li>
        <li class="list-group-item">
          <h4>Notes:</h4>
          <p><%= @loan.notes %></p>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <table class="table">
        <thead>
          <tr>
            <th width='200'>SKU / Asset Tag</th>
            <th>Type</th>
            <th>Description</th>
            <th width='100'>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% @loan.loan_line_items.each do |line_item| %>
            <tr>
              <td><%= line_item.identifier %></td>
              <td><%= line_item.loanable_type %></td>
              <td><%= line_item.description %></td>
              <td><%= line_item.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
