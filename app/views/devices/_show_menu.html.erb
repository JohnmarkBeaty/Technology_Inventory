<% if @device.checkedout %>
	<li><%= link_to "Check-in Device", checkin_path(@device.checkout_histories.last.id, redir: '1'), remote: true %>
<% else %>
	<li><%= link_to "Loan Device", new_checkout_history_path(:device_id => @device.id), remote: true %></li>
<% end %>
<li><%= link_to "Create New #{@device.device_group.name.singularize}", device_group_new_path(@device.device_group.name) %></li>
<li><%= link_to "Edit #{@device.device_group.name.singularize}", device_group_edit_path(@device.device_group.name, @device) %></li>
<li><%= link_to "Delete #{@device.device_group.name.singularize}", device_group_show_path(@device.device_group.name, @device), method: :delete, data: { confirm: 'Are you sure?' } %></li>