<div class="row">
  <div class="col-xs-10">
    <h1>All <%= @device_group.name %></h1>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Create #{@device_group.name.singularize}", device_group_new_path(@device_group.name) %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divide">

<div class="row">
  <% if @devices.count > 0 %>
    <% @devices.each do |device| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-8">
                <h4 class="panel-title">
                  <strong>
                    <a data-toggle="collapse" href="#<%= device.id %>"><%= device.name %></a>
                  </strong> &nbsp;&nbsp;&nbsp;
                  <% if device.checkedout %>
                    <div class="label label-danger">
                      Loaned
                    </div>
                  <% end %>
                </h4>
              </div>
              <div class="col-xs-4">
                <div class="pull-right">
                  <a href="<%= device_group_show_path(@device_group.name, device) %>"><span class="glyphicon glyphicon-fullscreen"></span></a>
                </div>
              </div>
            </div>
          </div>
          <div id="<%= device.id %>" class="panel-collapse collapse">
            <div class="panel-body">
              <% if device.asset_tag %>
                <strong>Asset Tag: </strong><%= device.asset_tag %><br>
              <% end %>
              <% device.attr_devices.each do |attrb| %>
                <% if attrb.value != nil && attrb.value != '' %>
                  <strong><%= attrb.attr.name %>: </strong><%= attrb.value %><br>
                <% end %>
              <% end %>
            </div>
            <div class="panel-footer">
              <div class="btn-group btn-group-justified">
                <div class="btn-group">
                  <a href="<%= device_group_edit_path(@device_group.name, device) %>" class="btn btn-warning" role="button">Edit</a>
                </div>
                <div class="btn-group">
                  <a data-confirm="Are you sure?" data-method="delete" href="<%= device_group_show_path(@device_group.name, device) %>" rel="nofollow" class="btn btn-danger" role="button">Delete</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h4>No <%= @device_group.name.downcase %> found. Add one above. </h4>
  <% end %>
</div>
<hr class="hr-divide">
