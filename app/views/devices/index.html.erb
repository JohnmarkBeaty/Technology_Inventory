<h1>Listing devices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Asset tag</th>
      <th>Notes</th>
      <th>Device Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.asset_tag %></td>
        <td><%= device.notes %></td>
        <td><%= device.device_group.name %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

