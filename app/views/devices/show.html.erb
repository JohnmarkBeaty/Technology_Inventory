<div class="row">
  <div class="col-xs-10">
  <h2>
    <%= @device.name %>
    <small><%=@device.device_group.name.singularize %></small>
  </h2>
  </div>
  <div class="col-xs-2">
    <div class="pull-right">
      <br>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-cog"></span>&nbsp;<span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <% if @device.checkedout %>
            <li><%= link_to "Check-in Device", checkin_path(@device.checkout_histories.last.id, redir: '1') %>
          <% else %>
            <li><a data-toggle="modal" data-target="#loanDevice" href="#">Loan Device</a></li>
          <% end %>
          <li><%= link_to "Create New #{@device_group.name.singularize}", device_group_new_path(@device_group.name) %></li>
          <li><%= link_to "Edit #{@device.device_group.name.singularize}", device_group_edit_path(@device_group.name, @device) %></li>
          <li><%= link_to "Delete #{@device.device_group.name.singularize}", device_group_show_path(@device_group.name, @device), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr class="hr-divider">
<div class="row">
  <div class="col-md-9">
    <div class="col-md-4">
      <% if @device.checkedout %>
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title">Loaned Out</h3>
          </div>
          <div class="panel-body">
            to <%= @device.checkout_histories.last.name %>
          </div>
        </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Asset Tag</h3>
        </div>
        <div class="panel-body">
          <%= @device.asset_tag %>
        </div>
      </div>
    </div>
    <% @device.attr_devices.each do |attrb| %>
      <% if attrb.value != nil && attrb.value != '' %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= attrb.attr.name %>
            </div>
            <div class="panel-body">
              <%= attrb.value %>
            </div> 
          </div>
        </div>
      <% end %>
    <% end %>
    <% unless @device.notes == '' || @device.notes == nil %>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Notes</h3>
          </div>
          <div class="panel-body">
            <%= @device.notes %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">IP Addresses</h3>
        </div>
          <ul class="list-group" id="address-index">
          <% if @device.addresses.count > 0 %>
            <% @device.addresses.each do |a| %>
              <li class="list-group-item">
                <%= a.address %><span class="hidden-md"> - <%= a.network.name %></span>
                <div class="pull-right">
                  <%= link_to 'X', a, method: :delete, remote: true, class:"label label-danger" %>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item">
              An IP address has not been assigned to this <%= @device_group.name.singularize.downcase %>. Click below to add one.
            </li>
          <% end %>
        </ul>
        <div class="panel-footer">
          <%= link_to "Add IP Address", new_address_path(:device_id => @device.id),remote: true, class:"btn btn-default btn-block" %>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            History
          </div>
        </div>
        <ul class="list-group">
          <% if @device.logs.count > 0 %>
            <% @device.logs.order(created_at: :desc).limit(5).each do |log| %>
              <li class="list-group-item">
                On <%= log.created_at.to_time.strftime("%-m-%-d-%Y") %>:<br>
                <%= log.message %>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item">No history for this device.</li>
          <% end %>
        </ul>
        <% if @device.logs.count > 5 %>
          <div class="panel-footer">
            <button data-toggle="modal" data-target="#viewHistory" class="btn btn-default btn-block">
              View Full History
            </button>
          </div>
        <% end %>
      </div>
      <% if @device.articles.count > 0 || @device.device_group.articles.count > 0 %>
        <div class="panel panel-default">
            <div class="panel-heading">
              <div class="panel-title">
                Linked Articles
              </div>
            </div>
            <div class="panel-body">
              <ul class="list-unstyled">
                <% @device.articles.each do |article| %>
                  <li><%= link_to "#{article.title}", article %></li>
                <% end %>
                <% @device.device_group.articles.each do |article| %>
                  <li><%= link_to "#{article.title}", article %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<hr class="hr-divide">
<div class="row hidden-xs hiddem-sm">
  <div class="col-xs-12">
    <a href="<%= device_types_path(@device_group.name) %>" class="btn btn-default">
      <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;back
    </a>
  </div>
</div>
<div class="row visible-xs visible-sm">
  <div class="col-xs-12">
    <a href="<%= device_types_path(@device_group.name) %>" class="btn btn-block btn-default">
      <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;back
    </a>
  </div>
</div>
<hr class="hr-divide">

<div class="modal fade" id="address-modal" tabindex="-1" role="dialog" aria-labelledby="address-modal" aria-hidden="true">
</div>


<% if @device.logs.count > 5 %>
  <div class="modal fade" id="viewHistory" tabindex="-1" role="dialog" aria-labelledby="viewHistory" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= @device_group.name.singularize %> History</h4>
        </div>
        <div class="modal-body">
          <% @device.logs.order(created_at: :desc).each do |log| %>
            On <%= log.created_at.to_time.strftime("%-m-%-d-%Y") %>:<br>
            <%= log.message %>
            <hr>
          <% end %>
        </div>
        <div class="modal-footer">
          <%= link_to "Clear History", device_group_clear_history_path(@device_group.name, @device),  method: :delete, class:"btn btn-danger" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="modal fade" id="loanDevice" tabindex="-1" role="dialog" aria-labelledby="loanDevice" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Loan Device</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@checkout_history) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :notes %>
            <%= f.text_area :notes, class:"form-control" %>
          </div>
          <%= hidden_field_tag :device_id, @device.id %>
          <%= hidden_field_tag :redir, 1 %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         <%= submit_tag "Loan Device",  class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
