<div class="row">
  <div class="col-md-8">
  <div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-10">
        <h2>
          <%= image_tag @device.device_group.icon_url, class:"img-circle", size:"100" %>
          &nbsp;&nbsp;<%= @device.name %>
        </h2>
      </div>
      <div class="col-md-2">
        <div class="pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-cog"></span>&nbsp;<span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" role="menu" id="show-menu">
              <%= render 'show_menu' %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div id="device_attrs">
        <%= render 'show_device_attrs' %>
      </div>
      <div id="device_ip_address">
        <%= render 'show_ip_address' %>
      </div>
    </div>
    <div class="row">
      
        <%= render 'show_history' %>
      
    </div>
    </div>
    </div>
  </div>
  <div class="divider-vertical"></div>
  <div class="col-md-3">
    <div class="panel panel-default">
    <div class="ds-<%= @device.status %>">
      <center><%= @device.status.titleize %></center>
    </div>

    <div class="panel-body">
      <center>
        <%= image_tag "https://api.qrserver.com/v1/create-qr-code/?data=#{request.original_url}&size=150x150", class:"img-thumbnail", size:"150" %>
      </center>
      <br>
    </div>
    
    
      <table class="table">
        <tr>
          <td style="vertical-align:middle"><%= image_tag "http://placehold.it/75x75", class:"img-rounded", size:"75" %></td>
          <td style="vertical-align:middle">
            <h4>
              Test U.
            </h4>
            <p>
              Finance Department<br>
              800-555-5555<br>
              test@example.org
            </p>
          </td>
        </tr>
      </table>
   
    </div>
    <%= link_to 'Attachments', device_attachments_path(@device), class:'btn btn-lg btn-default btn-block', remote: true %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to device_types_path(@device_group.name), class:"btn btn-default" do %>
      <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;back
    <% end %>
  </div>
</div>

<div class="modal fade" id="address-modal" tabindex="-1" role="dialog" aria-labelledby="address-modal" aria-hidden="true">
</div>

<div class="modal fade" id="device-modal" tabindex="-1" role="dialog" aria-labelledby="device-modal" aria-hidden="true">
</div>