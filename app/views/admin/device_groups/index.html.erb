<div class="row">
  <div class="col-md-3 hidden-xs hidden-sm">
    <%= render 'shared/admin_sidebar' %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-xs-10">
        <h1>Device Groups</h1>
      </div>
      <div class="col-xs-2">
        <div class="pull-right">
          <br>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
              <li><%= link_to "Create Device Group", new_admin_device_group_path %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <hr class="hr-divide">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-body">
          <br>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th># of Devices</th>
                <th width="200"></th>
              </tr>
            </thead>
            <tbody>
              <% @device_groups.each do |device_group| %>
                <tr>
                  <td><%= link_to device_group.name, admin_device_group_path(device_group) %></td>
                  <td><%= device_group.devices.count %></td>
                  <td>
                    <%= link_to "Edit", edit_admin_device_group_path(device_group), class:"label label-default" %>
                    <%= link_to "Delete", admin_device_group_path(device_group), method:"delete", class:"label label-default" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <hr class="hr-divide">
  </div>
</div>




