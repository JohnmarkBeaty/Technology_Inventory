<% @device_groups.each do |device_group| %>
	<tr>
		<td><%= image_tag device_group.icon_url, class:"img-thumbnail", size:"50" %></td>
		<td style:"vertical-align:middle;"><%= link_to device_group.name, admin_device_group_path(device_group) %></td>
		<td style:"vertical-align:middle;"><%= device_group.devices.count %></td>
		<td style:"vertical-align:middle;">
			<div class="pull-right">
				<%= link_to "Edit", edit_admin_device_group_path(device_group), class:"label label-default", remote: true %>
				<%= link_to "Delete", admin_device_group_delete_path(device_group), class:"label label-danger", remote: true %>
			</div>
		</td>
	</tr>
<% end %>