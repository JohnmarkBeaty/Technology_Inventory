<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">add property</h4>
      </div>
      <%= form_for [:admin, @device_group], remote: true do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>
          <div class="row">
            <div class="col-md-12">
              <%= f.fields_for :properties, f.object.properties.build do |f_property| %>
                <div class="form-group">
                  <%= f_property.label :name %>
                  <%= f_property.text_field :name, class:"form-control" %>
                </div>
                <div class="form-group">
                  <%= f_property.label :style %>
                  <%= f_property.select(:style, Property.valid_styles { |value| [ value, value ] }, { :include_blank=>true }, { :class => 'form-control' }) %>
                </div>
                <div class="form-group">
                  <%= f_property.label :unit %>
                  <%= f_property.text_field :unit, class:"form-control" %>
                </div>
                <div class="form-group">
                  <%= f_property.label :fa_style %>
                  <%= f_property.text_field :fa_style, class:"form-control" %>
                </div>
                <div class="form-group">
                  <%= f_property.label :values %>
                  <%= f_property.text_field :values, class:"form-control" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'save property', class: "btn btn-primary" %>
          <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
        </div>
      <% end %>
    </div>
  </div>