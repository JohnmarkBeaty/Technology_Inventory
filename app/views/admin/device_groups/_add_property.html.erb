<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">add property</h4>
      </div>
      <%= form_for [:admin, @device_group], remote: true do |f| %>
		  <div class="modal-body">
		    <ul class="errors"></ul>
		    <div class="row">
		      <div class="col-md-12">
		      	<div class="form-group">
			        <% @properties_array.each do |property_group| %>
			        	<div class="col-md-4">
			        		<% property_group.each do |property| %>
			        			<%= check_box_tag "device_group[property_ids][]", property.id %>
			        			<%= property.name %><br>
			        		<% end %>
			        	</div>
			        <% end %>
		        </div>
		      </div>
		    </div>
		  </div>
		  <div class="modal-footer">
		    <%= f.submit 'add property', class: "btn btn-primary" %>
		    <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
		  </div>
		<% end %>
    </div>
</div>