<%= form_for [:admin, @property], remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :style %>
              <%= f.select(:style, Property.valid_styles { |value| [ value, value ] }, { :include_blank=>true }, { :class => 'form-control' }) %>
            </div>
            <div class="form-group">
              <%= f.label :unit %>
              <%= f.text_field :unit, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :fa_style %>
              <%= f.text_field :fa_style, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :values %>
              <%= f.text_field :values, class:"form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit 'save property', class: "btn btn-primary" %>
        <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>