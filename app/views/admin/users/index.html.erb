<div class="row">
	<div class="col-md-3">
		<%= render "shared/admin_sidebar" %>
	</div>
	<div class="col-md-9">
		<div class="row">
			<div class="col-xs-10">
			<h1>Users</h1>
			</div>
			<div class="col-xs-2">
				<div class="pull-right">
					<br>
					<div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-plus"></span>&nbsp;<span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
              <li><%= link_to "Create User", new_admin_user_path %></li>
            </ul>
          </div>
				</div>
			</div>
		</div>
		<hr clas="hr-divide">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th></th>
								<th width="200"></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
								<tr>
									<td><%= link_to user.name, admin_user_path(user) %></td>
									<td><%= user.email %></td>
									<td>
										<%= form_for(user, :url => admin_user_path(user)) do |f| %>
											<%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]}) %>
											<%= f.submit 'Change Role', :class=> 'btn btn-default btn-xs' %>
										<% end %>
									</td>
									<td>
										<%= link_to 'Edit', edit_admin_user_path(user), class:'label label-default' %>&nbsp;&nbsp;
										<%= link_to 'Delete', admin_user_path(user), method:'delete', class:'label label-default' %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>