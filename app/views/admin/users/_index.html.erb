<% @users.each do |user| %>
	<tr>
		<td><%= link_to user.name, admin_user_path(user) %></td>
		<td><%= user.email %></td>
		<td>
			<%= form_for user, :url => admin_user_path(user), remote: true do |f| %>
				<%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]}) %>
				<%= f.submit 'Change Role', :class=> 'btn btn-default btn-xs' %>
			<% end %>
		</td>
		<td>
			<%= link_to 'Edit', edit_admin_user_path(user), remote: true, class:'label label-default' %>&nbsp;&nbsp;
			<%= link_to "Delete", admin_user_delete_path(user), remote: true, class: "label label-danger" %>
		</td>
	</tr>
<% end %>