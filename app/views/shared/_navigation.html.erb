        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'tracksIT', root_path, class:"navbar-brand"%>
    </div>
    <div class="navbar-collapse collapse">
      <% if current_user %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Knowledge Base", articles_path %></li>
          <li><%= link_to 'Networks', networks_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Devices <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% @device_types.each do |group| %>
                <li><%= link_to "#{group.name}", device_types_path(group.name) %></li>
              <% end %>
