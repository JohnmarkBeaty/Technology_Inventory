            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-wrench"></span>&nbsp;<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to "Administrator Dashboard", admin_dashboard_path %>
